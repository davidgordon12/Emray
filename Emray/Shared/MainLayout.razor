<div id="main">
    <h2>EMRAY.</h2>
    <div id="container">
        <div id="box">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V8z" clip-rule="evenodd" />
            </svg>
            <label id="section-f">
                <input type="file" />
                Select File
            </label>
        </div>
        <div id="box">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z" />
            </svg>
            <label id="section-o">
                <input type="file" />
                Output Location
            </label>
        </div>
        <div id="box">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
            <button @onclick="Run" id="section-e">
                @Method
            </button>
        </div>
    </div>
    <div id="selection">
        <button @onclick="Encrypt" id="Encrypt" value="Encrypt">Encrypt</button>
        <button @onclick="Decrypt" id="Decrypt" value="Decrypt">Decrypt</button>
    </div>
</div>

@code {
    string Method { get; set; } = "Encrypt";
    string Error { get; set; }
    void Run()
    {
        switch(Method)
        {
            case "Encrypt":
                break;
            case "Decrypt":
                break;
            default:
                Error = $"Error running {Method}ion. Please restart the application";
                break;
        }
    }

    void Encrypt()
    {
        Method = "Encrypt";
    }

    void Decrypt()
    {
        Method = "Decrypt";
    }
}